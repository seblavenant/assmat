web:
    image: seblavenant/php-apache
    ports:
        - 80
    dns: ${HOST_IP}
    volumes:
        - /root/apps/assmat/:/var/www/
        - /var/www/html
        - /root/apps/assmat/app/.deploy/config/vhosts/application/:/etc/apache2/sites-enabled/
    links:
        - database
    environment:
        - SERVICE_NAME=app-assmat

database:
    image: mysql
    environment:
        - MYSQL_ROOT_PASSWORD=<%db.password%>
        - MYSQL_DATABASE=<%db.name%>
        - MYSQL_USER=<%db.user%>
        - MYSQL_PASSWORD=<%db.password%>
    volumes:
        - /root/apps/assmat/var/data/mysql/:/var/lib/mysql/

phpmyadmin:
    image: corbinu/docker-phpmyadmin
    ports :
        - 80
    environment:
        - MYSQL_USERNAME=<%db.user%>
        - MYSQL_PASSWORD=<%db.password%>
        - SERVICE_NAME=app-phpmyadmin
    links:
        - database:mysql
