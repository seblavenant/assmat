{% extends 'common/layout.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}
<div class="container-fluid">
    <div id="page-login" class="row">
        <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <div class="box">
                <div class="box-content">
                    <form class="form-horizontal" novalidate method="post" data-ajax-form="true" action="{{ path('user_create') }}">
                        <div class="text-center">
                            <h3 class="page-header">Cr√©ation de compte</h3>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.email) }}</div><div class="col-xs-9">{{ form_widget(form.email) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.nom) }}</div><div class="col-xs-9">{{ form_widget(form.nom) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.prenom) }}</div><div class="col-xs-9">{{ form_widget(form.prenom) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.adresse) }}</div><div class="col-xs-9">{{ form_widget(form.adresse) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.codePostal) }}</div><div class="col-xs-9">{{ form_widget(form.codePostal) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.ville) }}</div><div class="col-xs-9">{{ form_widget(form.ville) }}</div>
                        </div>

                        {{ form_rest(form) }}

                        <button class="btn btn-primary" type="submit">Valider</button>
                        <a href="{{ path('user_login') }}">Se connecter</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

