{% spaceless %}
{% if app.session.getFlashBag.peekAll|length %}
<div id="alerts-container">
    {% for type, alerts in app.session.getFlashBag.all %}
        {% set cssClass = type %}
        {% set icon = '' %}
        {% if type == 'success' %}
            {% set icon = 'glyphicon glyphicon-ok-sign' %}
        {% endif %}
        {% if type == 'warning' %}
            {% set icon = 'glyphicon glyphicon-exclamation-sign' %}
        {% endif %}
        {% if type == 'error' %}
            {% set cssClass = 'danger' %}
            {% set icon = 'glyphicon glyphicon-remove-sign' %}
        {% endif %}

        {% for message in alerts %}
            <div class="alert alert-{{ cssClass }} alert-dismissable" >
                <button type="button" class="close" data-dismiss="alert" >&times;</button>
                {% if icon is not empty %}<span class="{{ icon }}"></span>{% endif %}
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
</div>
{% endif %}
{% endspaceless %}
