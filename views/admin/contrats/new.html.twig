{% extends 'admin/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div id="breadcrumb" class="col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_index') }}">Dashboard</a></li>
                <li><a href="{{ path('admin_contrats') }}">Mes contrats</a></li>
                <li>Nouveau contrat</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div id="actions" class="box-content">
                    <a class="btn btn-label-left btn-primary" href="">
                        <span><i class="fa fa-plus-square-o"></i></span> Ajouter un employ√©
                    </a>
                </div>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="box">
                <div id="actions" class="box-content">
                    <form novalidate class="form-horizontal" method="post" data-ajax-form="true" action="{{ path('admin_contrats_create') }}">
                        {% spaceless %}
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.nom) }}</div><div class="col-xs-9">{{ form_widget(form.nom) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.typeId) }}</div><div class="col-xs-9">{{ form_widget(form.typeId) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.salaireHoraire) }}</div><div class="col-xs-9">{{ form_widget(form.salaireHoraire) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.joursGarde) }}</div><div class="col-xs-9">{{ form_widget(form.joursGarde) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.heuresHebdo) }}</div><div class="col-xs-9">{{ form_widget(form.heuresHebdo) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.nombreSemainesAn) }}</div><div class="col-xs-9">{{ form_widget(form.nombreSemainesAn) }}</div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-3">{{ form_label(form.employeId) }}</div><div class="col-xs-9">{{ form_widget(form.employeId) }}</div>
                        </div>
                        {{ form_rest(form) }}
                        <input type="submit" value="Enregistrer" />
                        {% endspaceless %}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}