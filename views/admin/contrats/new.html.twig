{% extends 'admin/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div id="breadcrumb" class="col-xs-12">
            <ol class="breadcrumb">
                <li><a href="{{ path('admin_index') }}">Dashboard</a></li>
                <li><a href="{{ path('admin_contrats') }}">Mes contrats</a></li>
                <li>Nouveau contrat</li>
            </ol>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div id="actions" class="box-content">
                    <form novalidate method="post" data-ajax-form="true" action="{{ path('admin_contrats_create') }}">
                        {% spaceless %}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.salaireHoraire) }}
                        {{ form_row(form.joursGarde) }}
                        {{ form_row(form.heuresHebdo) }}
                        {{ form_row(form.nombreSemainesAn) }}
                        {{ form_row(form.typeId) }}
                        {{ form_row(form.employeId) }}
                        {{ form_row(form.employeurId) }}
                        {{ form_rest(form) }}
                        <input type="submit" value="Enregistrer" />
                        {% endspaceless %}
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}